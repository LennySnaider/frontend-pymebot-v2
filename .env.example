# Variables de entorno para la aplicación
# Copiar este archivo a .env.local para desarrollo local

# URL del backend API
# Dirección completa del servidor backend sin slash final
BACKEND_API_URL=http://localhost:3090

# ID de tenant por defecto para pruebas
# Se usa cuando no hay un tenant_id en la sesión
DEFAULT_TENANT_ID=afa60b0a-3046-4607-9c48-266af6e1d322
# Versión pública del tenant ID (accesible desde el cliente)
NEXT_PUBLIC_DEFAULT_TENANT_ID=afa60b0a-3046-4607-9c48-266af6e1d322

# Configuración del chatbot
CHATBOT_TIMEOUT=180000
CHATBOT_MAX_RETRIES=3

# Configuración de Next Auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Configuración de Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key